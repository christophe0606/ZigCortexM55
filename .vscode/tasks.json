{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install app in linux VM",
      "type": "shell",
      "command": "cp ${workspaceFolder}/ARM/out/Testapp/ARMCLANG/Testapp.axf /Volumes/Ext/VM_SharedFolder/test.elf",
      "problemMatcher": [],
      "dependsOn": ["Build zig lib", "cmsis-csolution.build: Build"],
      "dependsOrder": "sequence",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "echo": true
      }
    },
    {
      "label": "Build zig lib",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/zig"
      },
      "command": "zig build",
      "problemMatcher": [],
      "dependsOn": []
    },
    {
      "label": "Disasm",
      "type": "shell",
      "command": "/Volumes/Ext/vcpkg/artifacts/2139c4c6/compilers.arm.armclang/6.24.0/bin/fromelf  -c --output=test.dis ${workspaceFolder}/ARM/out/Testapp/ARMCLANG/Testapp.axf",
      "problemMatcher": [],
      "dependsOn": ["Build zig lib", "cmsis-csolution.build: Build"],
      "dependsOrder": "sequence",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "echo": true
      }
    },
    {
      "label": "CMSIS Erase",
      "type": "shell",
      "command": "pyocd",
      "options": {
        "cwd": "${workspaceFolder}/ARM"
      },
      "windows": {
        "options": {
          "shell": {
            "executable": "cmd.exe",
            "args": ["/d", "/c"]
          }
        }
      },
      "linux": {
        "options": {
          "shell": {
            "executable": "/bin/bash",
            "args": ["-c"]
          }
        }
      },
      "osx": {
        "options": {
          "shell": {
            "executable": "/bin/bash",
            "args": ["-c"]
          }
        }
      },
      "args": [
        "erase",
        "--probe",
        "cmsisdap:",
        "--chip",
        "--cbuild-run",
        "${command:cmsis-csolution.getCbuildRunFile}"
      ],
      "problemMatcher": []
    },
    {
      "label": "CMSIS Load",
      "type": "shell",
      "command": "pyocd",
      "options": {
        "cwd": "${workspaceFolder}/ARM"
      },
      "windows": {
        "options": {
          "shell": {
            "executable": "cmd.exe",
            "args": ["/d", "/c"]
          }
        }
      },
      "linux": {
        "options": {
          "shell": {
            "executable": "/bin/bash",
            "args": ["-c"]
          }
        }
      },
      "osx": {
        "options": {
          "shell": {
            "executable": "/bin/bash",
            "args": ["-c"]
          }
        }
      },
      "args": [
        "load",
        "--probe",
        "cmsisdap:",
        "--cbuild-run",
        "${command:cmsis-csolution.getCbuildRunFile}"
      ],
      "problemMatcher": []
    },
    {
      "label": "CMSIS Run",
      "type": "shell",
      "command": "pyocd",
      "options": {
        "cwd": "${workspaceFolder}/ARM"
      },
      "windows": {
        "options": {
          "shell": {
            "executable": "cmd.exe",
            "args": ["/d", "/c"]
          }
        }
      },
      "linux": {
        "options": {
          "shell": {
            "executable": "/bin/bash",
            "args": ["-c"]
          }
        }
      },
      "osx": {
        "options": {
          "shell": {
            "executable": "/bin/bash",
            "args": ["-c"]
          }
        }
      },
      "args": [
        "gdbserver",
        "--probe",
        "cmsisdap:",
        "--connect",
        "attach",
        "--persist",
        "--reset-run",
        "--cbuild-run",
        "${command:cmsis-csolution.getCbuildRunFile}",
        "--quiet",
        "--log",
        "*.cbuild_run,*server=info"
      ],
      "problemMatcher": []
    },
    {
      "label": "CMSIS Load+Run",
      "dependsOn": ["CMSIS Load", "CMSIS Run"],
      "dependsOrder": "sequence",
      "problemMatcher": []
    },
    {
      "label": "CMSIS TargetInfo",
      "type": "shell",
      "command": "pyocd",
      "options": {
        "cwd": "${workspaceFolder}/ARM"
      },
      "windows": {
        "options": {
          "shell": {
            "executable": "cmd.exe",
            "args": ["/d", "/c"]
          }
        }
      },
      "linux": {
        "options": {
          "shell": {
            "executable": "/bin/bash",
            "args": ["-c"]
          }
        }
      },
      "osx": {
        "options": {
          "shell": {
            "executable": "/bin/bash",
            "args": ["-c"]
          }
        }
      },
      "args": [
        "list",
        "--cbuild-run",
        "${command:cmsis-csolution.getCbuildRunFile}"
      ],
      "problemMatcher": []
    }
  ]
}
